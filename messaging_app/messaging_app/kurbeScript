#!/bin/bash

# kurbeScript - Start Kubernetes cluster and verify setup
# This script starts a local Kubernetes cluster using minikube

echo "ğŸš€ Starting Kubernetes cluster setup..."

# Check if minikube is installed
if ! command -v minikube &> /dev/null; then
    echo "âŒ Error: minikube is not installed. Please install minikube first."
    echo "Visit: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Check if kubectl is installed
if ! command -v kubectl &> /dev/null; then
    echo "âŒ Error: kubectl is not installed. Please install kubectl first."
    exit 1
fi

echo "âœ… minikube and kubectl are installed"

# Start minikube cluster
echo "ğŸ”„ Starting minikube cluster..."
minikube start

# Wait for cluster to be ready
echo "â³ Waiting for cluster to be ready..."
kubectl wait --for=condition=Ready nodes --all --timeout=300s

# Verify cluster is running
echo "ğŸ” Verifying cluster status..."
kubectl cluster-info

# Check cluster nodes
echo "ğŸ“‹ Cluster nodes:"
kubectl get nodes

# Retrieve available pods in all namespaces
echo "ğŸ“¦ Available pods in all namespaces:"
kubectl get pods --all-namespaces

# Get pods in default namespace
echo "ğŸ“¦ Pods in default namespace:"
kubectl get pods

# Display cluster info
echo "â„¹ï¸  Cluster information:"
echo "Cluster status: $(kubectl cluster-info | head -1)"
echo "Kubernetes version: $(kubectl version --client --short)"
echo "Minikube status: $(minikube status)"

echo "âœ… Kubernetes cluster setup complete!"
echo "ğŸ’¡ You can now deploy applications to your cluster"